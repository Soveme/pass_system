# Database
DB_PASSWORD=secure_password_change_me
DATABASE_URL=postgresql+asyncpg://pass_admin:secure_password_change_me@localhost:5432/pass_system

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AES Encryption
ENCRYPTION_KEY=your_32_char_encryption_key_for_aes256

# Email (для SMS и Email уведомлений - заглушка)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Twilio для SMS (заглушка)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Environment
ENVIRONMENT=development
DEBUG=true

# Google Calendar API (для интеграции)
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Outlook Integration
MICROSOFT_CLIENT_ID=your_client_id
MICROSOFT_CLIENT_SECRET=your_client_secret
